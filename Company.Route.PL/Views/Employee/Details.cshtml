@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>

<br />
<br />
<div>
    <div class="my-3">
        <label asp-for="Name" class="col-form-label"> </label>
        <input asp-for="Name" class="form-control" readonly></input>
     </div>
    <div class="my-3">
        <label asp-for="Age" class="col-form-label"> </label>
        <input asp-for="Age" class="form-control" readonly></input>
     </div>
    <div class="my-3">
        <label asp-for="Email" class="col-form-label"> </label>
        <input asp-for="Email" class="form-control" readonly></input>
     </div>
    <div class="my-3">
        <label asp-for="Address" class="col-form-label"> </label>
        <input asp-for="Address" class="form-control" readonly></input>
     </div>
    <div class="my-3">
        <label asp-for="Phone" class="col-form-label"> </label>
        <input asp-for="Phone" class="form-control" readonly></input>
     </div>
    <div class="my-3">
        <label asp-for="Salary" class="col-form-label"> </label>
        <input asp-for="Salary" class="form-control" readonly></input>
     </div>
    <div class="my-3">
        <label asp-for="IsActive" class="col-form-label"> </label>
        <input asp-for="IsActive" class="form-check" disabled></input>
     </div>
    <div class="my-3">
        <label asp-for="IsDeleted" class="col-form-label"> </label>
        <input asp-for="IsDeleted" class="form-check" disabled></input>
     </div>
    <div class="my-3">
        <label asp-for="HiringDate" class="col-form-label"> </label>
        <input asp-for="HiringDate" class="form-control" readonly></input>
     </div>


    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label"> </label>
        <input asp-for="CreateAt" class="form-control" readonly></input>
    </div>

    <div>
        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-light">Back to List</a>
    </div>
</div>

