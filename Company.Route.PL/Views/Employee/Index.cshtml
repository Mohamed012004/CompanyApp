@using Microsoft.IdentityModel.Tokens
@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
    // ViewData["Message"];
    string? ViewDataMessage = ViewData["Message"] as string;
    string? ViewDataMessage2 = ViewBag.Message;
}

<h1>All Employees</h1>

<br />
<br />

<form>
    <div class="container m-4">
        <div class="row">
            <div class="col-6">
                <input placeholder="Search By Name" name="SearchInput" class="form-control"></input>
            </div>
            <div class="col-6">
                <input type="submit" value="Search" class="btn btn-success"></input>
            </div>

        </div>
    </div>

</form>



<div>
    <a asp-action="Create" asp-controller="Employee" class="btn btn-primary">Create Employee</a>
    <div />
    <br />

    @* <div m-3 class="alert alert-danger">
        <p>@ViewData["Message"]</p>
    </div>
    <div m-3 class="alert alert-danger">
        <p>@ViewBag.Massage</p>
    </div>
    <div m-3 class="alert alert-danger">
        <p>@ViewDataMessage2</p>
    </div> *@
    @if(!string.IsNullOrEmpty(TempData["Message"] as string))
    {
         <div m-3 class="alert alert-info">
        <p>@TempData["Message"]</p>
    </div>

    }
   
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                         <th>Name</th>
                         <th>Age</th>
                         <th>Email</th>
                         <th>Address</th>
                         <th>Phone</th>
                         <th>Salary</th>
                         <th>IsActive</th>
                         <th>IsDeleted</th>
                         <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                         <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                         <th>Department Name</th>

                         <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <body>
                    @foreach (var item in Model)
                    {
                    <tr>
                         <td>@item.Name</td>
                         <td>@item.Age</td>
                         <td>@item.Email</td>
                         <td>@item.Address</td>
                         <td>@item.Phone</td>
                         <td>@item.Salary</td>
                         <td>@item.IsActive</td>
                         <td>@item.IsDeleted</td>
                         <td>@item.HiringDate</td>
                         <td>@item.CreateAt</td>
                        @if (item.Department is null)
                            {
                            <td>"No Department"</td>                  
                            }
                        else
                        {
                            <td>@item.Department.Name</td>
                        }
  
                        <partial name="_ButtonPartialView" model="@item.Id" />
                    </tr>

                }
                </body>
            </table>
        }
        else
        {
            <div mt-4 class="alert alert-info">
                <h4>There is No Employee :(</h4>
            </div>
        }
    </div>



