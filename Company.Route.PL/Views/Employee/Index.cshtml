@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>

<br />
<br />
<div>
    <a asp-action="Create" asp-controller="Employee" class="btn btn-primary">Create Employee</a>
    <div />
    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                         <th>Name</th>
                         <th>Age</th>
                         <th>Email</th>
                         <th>Address</th>
                         <th>Phone</th>
                         <th>Salary</th>
                         <th>IsActive</th>
                         <th>IsDeleted</th>
                         <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                         <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                         <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <body>
                    @foreach (var item in Model)
                    {
                    <tr>
                         <td>@item.Name</td>
                         <td>@item.Age</td>
                         <td>@item.Email</td>
                         <td>@item.Address</td>
                         <td>@item.Phone</td>
                         <td>@item.Salary</td>
                         <td>@item.IsActive</td>
                         <td>@item.IsDeleted</td>
                         <td>@item.HiringDate</td>
                        <td>@item.CreateAt</td>

                        <partial name="_ButtonPartialView" model="@item.Id" />
                    </tr>

                }
                </body>
            </table>
        }
        else
        {
            <div mt-4 class="alert alert-info">
                <h4>There is No Employee :(</h4>
            </div>
        }
    </div>



