 @model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<br />
<br />
<div>
    <a asp-action="CreateDepartment" asp-controller="Department" class="btn btn-primary">Create Department</a>
<div/>
<br />

<div>
    @if(Model.Count() > 0)
        {
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Create At</th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <body>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.Name</td>
                            <td>@item.CreateAt</td>
                            <td>
                            <a asp-action="Details" class="btn btn-warning">Details</a>
                            </td>
                            <td>
                            <a asp-action="Edit" class="btn btn-success">Update</a>
                            </td>
                            <td>
                            <a asp-action="Delete" class="btn btn-danger">Delete</a>
                            </td>                                         
                        </tr>
                    
                }
                </body>
            </table>
        }else
        {
            <div mt-4 class="alert alert-info">
                <h4>There is No Department :(</h4>
            </div>
        }
    </div>
