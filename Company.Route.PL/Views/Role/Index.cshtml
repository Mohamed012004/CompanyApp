
 @model IEnumerable<RoleToReturnDto>


<h1>All Roles</h1>

<br />
<br />

<form>
    <div class="container m-4">
        <div class="row">
            <div class="col-6">
                <input placeholder="Search By Name" name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>

        </div>
    </div>

</form>

<div>
    <a asp-action="Create" asp-controller="Role" class="btn btn-primary">Create Role</a>
<div />
<br/>
     
@if (Model.Count() > 0)
{
<table class="table table-hover table-striped">
    <thead>
        <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
        </tr>
    </thead>
    <body>
        @foreach (var item in Model)
        {
        <tr>  
                <td>@item.Id</td>
                <td>@item.Name</td>
             
            <partial name="_ButtonPartialView" model="@item.Id" />
        </tr>

    }
    </body>
</table>
}
else
{
<div mt-4 class="alert alert-info">
    <h4>There is No Roles :(</h4>
</div>
}
 





